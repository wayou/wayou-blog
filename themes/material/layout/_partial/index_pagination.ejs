<div class="pagination-wrapper">
	 <% if (page.prev || page.next) { %>
		<% if (page.prev){ %>
      <a href="<%- config.root %><%- page.prev_link %>" class="btn btn-default alignleft prev"><i class="fa fa-chevron-left"></i> <%= __('prev_page') %></a>
  		<% } else { %>
          <a class="btn btn-default disabled"><i class="fa fa-chevron-left"></i><%= __('prev_page') %></a>
        <% } %>

        <a class="btn btn-default" href="<%- config.root %>"><i class="fa fa-home"></i><%= __('home') %></a>

		<% if (page.next){ %>
       <a href="<%- config.root %><%- page.next_link %>" class="btn btn-default alignright next"><%= __('next_page') %><i class="fa fa-chevron-right"></i></a>
        <% } else { %>
          <a class="btn btn-default disabled"><%= __('next_page') %><i class="fa fa-chevron-right"></i></a>
        <% } %>
	<% }  %>
</div>
